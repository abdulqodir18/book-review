<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> <%= title || 'Error' %></h4>
      </div>
      <div class="card-body">
        <h5 class="mb-3"><%= message || 'Something went wrong' %></h5>
        
        <% if (process.env.NODE_ENV === 'development' && error) { %>
          <div class="alert alert-secondary">
            <h6>Error Details (Development Only):</h6>
            <pre class="mb-0"><%= typeof error === 'object' ? JSON.stringify(error, null, 2) : error %></pre>
          </div>
        <% } %>
        
        <div class="mt-4">
          <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Go Back
          </a>
          <a href="/feed" class="btn btn-primary ms-2">
            <i class="fas fa-home"></i> Go to Feed
          </a>
        </div>
      </div>
    </div>
  </div>
</div>